// Function To Display Popup
      function div_show() {
         document.getElementById("loginError2").innerHTML = "<br>An error occurred. Please try your username and password <br><br>&nbsp;";
         //document.getElementById("username").focus();
      }
      function checkPassField() {
         if ((document.getElementById("user").value == null) || (document.getElementById("user").value.trim() == "")) {
          document.getElementById("loginError").innerHTML = 'Error: You cannot leave the<br>"UVa computing ID" field blank.';
          return false;
         }
         if ((document.getElementById("pass").value == null) || (document.getElementById("pass").value.trim() == "")) {
          document.getElementById("loginError").innerHTML = 'Error: You cannot leave the "Password" field blank.';
          return false;
         }
      }
   </script>
